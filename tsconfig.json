{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react-jsxdev",
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        ".eslintrc.js",
        ".webpack/**/*",
        "webpack.config.js",
    ],
    "exclude": [
        "node_modules"
    ]
}
