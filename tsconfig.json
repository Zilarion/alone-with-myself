{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react-jsxdev",
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "./declarations",
            "vite/client",
        ]
    },
    "include": [
        "src/**/*",
        ".eslintrc.js",
        ".webpack/**/*",
        "webpack.config.js",
    ],
    "exclude": [
        "node_modules"
    ]
}
